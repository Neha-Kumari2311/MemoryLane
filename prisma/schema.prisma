generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  capsules  Capsule[]
  collaborations Collaborator[]
}

model Capsule {
  id         Int         @id @default(autoincrement())
  title      String
  unlockDate DateTime
  unlocked   Boolean    @default(false)
  letter     String?
  theme      String?     // e.g., "Childhood", "Family History", "College Years"
  creatorId  Int
  creator    User        @relation(fields: [creatorId], references: [id])
  memories   Memory[]
  recipients Recipient[]
  collaborators Collaborator[]
}

model Collaborator {
  id        Int     @id @default(autoincrement())
  userId    Int
  capsuleId Int
  user      User    @relation(fields: [userId], references: [id])
  capsule   Capsule @relation(fields: [capsuleId], references: [id])
  createdAt DateTime @default(now())
  
  @@unique([userId, capsuleId])
}

model Memory {
  id         Int     @id @default(autoincrement())
  type       String
  contentUrl String?
  caption    String?
  capsuleId  Int
  addedById  Int?    // Track who added this memory (for collaboration)
  capsule    Capsule @relation(fields: [capsuleId], references: [id], onDelete: Cascade)
}

model Recipient {
  id        Int     @id @default(autoincrement())
  email     String
  capsuleId Int
  notified  Boolean @default(false)
  token     String  @default(uuid())
  capsule   Capsule @relation(fields: [capsuleId], references: [id])
}