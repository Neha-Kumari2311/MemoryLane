datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String    // store hashed password
  createdAt DateTime  @default(now())
  capsules  Capsule[]
}

model Capsule {
  id         Int        @id @default(autoincrement())
  title      String
  unlockDate DateTime
  creator    User       @relation(fields: [creatorId], references: [id])
  creatorId  Int
  memories   Memory[]
  recipients Recipient[]
}

model Memory {
  id         Int      @id @default(autoincrement())
  type       String   // "text", "image", "video", "audio"
  contentUrl String   // URL or path to file
  caption    String?
  capsule    Capsule  @relation(fields: [capsuleId], references: [id])
  capsuleId  Int
}

model Recipient {
  id         Int      @id @default(autoincrement())
  email      String
  capsule    Capsule  @relation(fields: [capsuleId], references: [id])
  capsuleId  Int
  notified   Boolean  @default(false)
  token      String   @default(uuid()) // unique link for recipient

}
